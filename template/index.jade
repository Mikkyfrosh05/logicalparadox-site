extends layout

block header
  h1= file.title

block content
  #index.primary
    .wrap
      - if (files.posts)
        section#index-articles
          .masthead
            - var len = (files.posts.length > 2) ? 2 : files.posts.length
            - for (var i = 0; i < len; i++)
              - var post = files.posts[i]
              article.summary
                .thumbnail :D
                .meta
                  h4: a(href=post.href) #{post.title}
                  .summary= post.summary
          .widget#recent-posts
            - var len = (files.posts.length > 5) ? 5 : files.posts.length
            - for (var i = 2; i < len; i++)
              - var post = files.posts[i]
              article.summary
                .thumbnail :D
                .meta
                  h3: a(href=post.href) #{post.title}
                  .summary= post.summary
  #index.sidebar
    .wrap
      p test

block footer
  - if (files.code)
    .widget#code
      .controls
        .arrow-prev prev
        .arrow-next next
        .position
      .message
        .wrap
          p Hello there
      .animate
        .panels
        .blocks
          - for (var i = 0; i < files.code.length; i++)
            - var repo = files.code[i]
            .block 
              .wrap
                h3
                  a(href=repo.href)= repo.title
                  .version= repo.version
                .summary: p= repo.summary
                .repo: a(href=repo.repo) Fork on Github
                .docs: a(href=repo.docs) #{repo.docstitle}
    .widget-hidden