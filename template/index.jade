extends layout

block header
  h1= file.title

block content
  article!= file.prepared
  .widget#code
    - if (files.code)
      ul
        - for (var i = 0; i < files.code.length; i++)
          - var repo = files.code[i]
          li 
            h3
              a(href=repo.href)= repo.title
              .version= repo.version
            .summary= repo.summary
            .repo: a(href=repo.repo) Fork #{repo.title} on Github
            .docs: a(href=repo.repo) #{repo.docstitle}
          
  .widget#recent-posts
    h3 Recent Posts
    - if (files.posts)
      ul
        - var len = (files.posts.length > 5) ? 5 : files.posts.length
        - for (var i = 0; i < len; i++)
          - var post = files.posts[i]
          li 
            h4: a(href=post.href) #{post.title}
            .summary= post.summary
