@import 'nib'
@import 'fez'
@import 'buttons'
global-reset()

fez-reset()

black = #373936
white = darken(#fff, 2%)

color1 = #8FC8D6 // background
color2 = #F33825 // links
color3 = #3570AA // menu links
color4 = #DA5F3E // dark accent
color5 = #F1EBD5 // light accent



body
  font 12px/21px  "HelveticaNeue", "Helvetica Neue", Helvetica, Arial, sans-serif
  background-color color1
  color black

h1, h2, h3, h4, h5
  font-family "Palatino Linotype", "Book Antiqua", Palatino, FreeSerif, serif
  font-weight normal

a
  color color2
  text-decoration none

@import 'layout'

.page-wrap
  nav#primary
  header#content, 
  section#content, 
  footer#primary
    overflow visible
    position relative
    .decor
      position absolute
      top -6px
      bottom -6px
      right -6px
      left -6px
      z-index 5
      opacity 0.4
      background-color white
      border-radius 8px
    .wrap
      position relative
      display block
      z-index 20
      overflow hidden



  > nav#primary
    margin-top 0px
    
  > header#content
    margin-top 50px
  
  > footer#primary
    .decor
      bottom 0px
      border-radius top 8px
      border-radius bottom 0px



nav#primary > .wrap
  clearfix()
  background-color white
  border-radius bottom 5px
  line-height 54px
  overflow hidden
  box-shadow 0px 0px 5px rgba(0,0,0,0.2)
  margin-bottom 50px !important
  
  h1#site-title
    margin 0px 15px
    font-size 28px
    line-height 54px
    float left
    a
      color black
  ul.menu
    list-style none
    float right
    li.tab
      margin-left 0px
      float left
      border-left 1px solid lighten(black, 75%)
      a
        display inline-block
        padding 0 30px
        &:hover
          background-color lighten(color1, 70%)
      &:last-child
        a:hover
          border-radius bottom right 5px

section#content > .wrap
  margin-top 50px !important
  margin-bottom 50px !important
  min-height 350px
  background-color white
  box-shadow 0px 0px 5px rgba(0,0,0,0.2)
  border-radius 5px
  overflow hidden
  > .masthead
    clearfix()
    padding-top 15px
    padding-bottom 15px
  > .primary
    clearfix()
    float left
    min-height 450px
    > .wrap
      margin-top 15px
      margin-bottom 15px
      overflow visible
  > .sidebar
    clearfix()
    float left
    margin-top 15px
    margin-bottom 15px
    > .wrap
      overflow visible
  > .footer
    float left
    padding-top 15px

#index.masthead
  section#index-articles
    article.summary
      .thumbnail
        box-shadow inset 0px 0px 2px color3
        height 150px
        margin-bottom 15px
        
      .action
        margin-top 10px
        .more
          button-alp-large()

#index.banner
  clearfix()
  background-color white
  border-top 1px color1 solid
  border-bottom 1px color1 solid
  > .wrap
    #for-hire.widget
      margin-top 15px

#index.primary
  border-right 1px solid lighten(color1, 70%)
  margin-right -1px
  > .wrap
    overflow visible !important
    
    section#social
      border-bottom 1px solid lighten(color1, 70%)
      padding-bottom 15px
      padding-top 15px
      
      #twitter > .wrap
        border 1px solid lighten(color1, 40%)
        background lighten(color5, 60%)
        border-radius 5px
        padding 2px
        height 150px
        overflow hidden
        position relative
        
        &:hover
          border 1px solid color1
        
        .follow
          position absolute
          bottom 2px
          left 2px
          right 2px
          background-color color1
          border-radius bottom 3px
          padding 3px
        
      #github > .wrap
        border 1px solid lighten(color1, 40%)
        background lighten(color5, 60%)
        border-radius 5px
        padding 2px
        height 150px
        
        &:hover
          border 1px solid color1
    
    section#recent-articles
      padding-top 10px
      article.summary
        border-bottom 1px dotted lighten(color1, 60%)
        margin-bottom 15px
        padding-bottom 15px
        
        &:last-child
          border-bottom none
        
        .thumbnail
          box-shadow inset 0px 0px 2px color3
          height 70px
          margin-bottom 15px
          
        .action
          margin-top 10px
          .more
            button-alp-small()
    
    section#actions
      margin-bottom 15px
      .more
        button-alp-large()
        width 200px

.widget#code
  clearfix()
  position relative
  .controls
    display none
    .arrow-prev
      background-color white
      width 20px
      height 40px
      position absolute
      top 80px
      left -20px
      overflow hidden
      cursor pointer
    .arrow-next
      background-color white
      width 20px
      height 40px
      position absolute
      top 80px
      right -20px
      overflow hidden
      cursor pointer
    .position
      position absolute
      top 0px
      white-space nowrap
      height 25px
      overflow hidden
      border-left 1px lighten(black, 75%) solid
      border-right 1px lighten(black, 75%) solid
      border-bottom 1px lighten(black, 75%) solid
      border-radius bottom 5px
      .pos
        display table-cell
        .p
          width 25px
          height 25px
  .message
    clearfix()
    border-radius top left 5px
    float left
    height 200px
    position relative
    z-index 30
    .wrap
      height 170px
      margin-top 15px
      margin-bottom 15px
  .animate
    > .panels
      height 200px
      border-radius top 10px
      .block
        float left
        overflow hidden
        .wrap
          height 170px
          margin-top 15px
          margin-bottom 15px

.sidebar
  .widget
    margin-bottom 15px
  .widget#products
    clearfix()
    section.product
      position relative
      margin-bottom 15px
      &:hover
        background-color lighten(color1, 85%)
        box-shadow inset 1px 1px 2px lighten(color1, 30%), 1px 1px 1px lighten(color1, 90%), inset -1px -1px 0px lighten(color1, 45%), inset 1px 1px 0px lighten(color1, 35%)
        border-radius 5px
      .icon
        position absolute
        border-radius 3px
        top 5px
        left 5px
        width 29px
        height 29px
        background color1
      .meta
        margin-left 50px
        padding 5px
        clearfix()
        h3.title
          margin-bottom 0px
          font-size 14px
          line-height 21px
          .version
            display inline-block
            color black
            font-size 11px
            padding 0px 5px
        .summary
          font-size 12px
        .repo > a
          button-shiny()
          float right
          margin-left 5px
        .docs > a
          button-shiny()
          float right
    
  .widget#twitter
    clearfix()
    section#widget
      min-height 75px
      background linear-gradient(top, lighten(color1, 10%), darken(color1, 10%))
      border 1px solid darken(color1, 15%)
      border-radius 5px
      box-shadow 1px 1px 1px white
    
footer#primary > .wrap
  box-shadow 0px 0px 5px rgba(0,0,0,0.2)
  background-color lighten(color1, 70%)
  border-radius top 5px
  .branding
    background-color color4
    position relative
    z-index 40
  
@import 'code'
@import 'blog'