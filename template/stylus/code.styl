#code-index.header
  clearfix()
  min-height 200px
  padding-top 15px
  border-bottom 1px solid darken(color1, 15%)
#code-index.primary
  clearfix()
  section.project
    float left
    border-right 1px solid darken(color1, 15%)
    border-bottom 1px solid darken(color1, 15%)
    margin-right -1px
    > .wrap
      height 200px
      padding-top 15px
      position relative
      > .meta
        > h2.title
          text-align center
        > .action
          text-align center
          position absolute
          bottom 15px
          right 15px
          left 15px
          a.learn
            button-alp-small()
#code-index.footer
  border-top 1px solid lighten(color1, 70%)
  margin-top -1px