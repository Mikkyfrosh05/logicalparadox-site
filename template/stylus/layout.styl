  footer#primary
    > .wrap
      rowInside(r3gw)
      #code.widget
        > .message > .wrap
          grid(4, r3cw, r3gw, r3ct)
        > .animate > .panels > .block
          grid(4, r3cw, r3gw, r3ct)

