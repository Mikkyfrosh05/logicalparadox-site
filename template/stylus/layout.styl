
columnWidth = 60px
gutterWidth = 15px

.page-wrap
  section#content
    row()

.page-wrap
  nav#primary
    > .bg > .wrap
      row()
  

// home page
section#content
  > .wrap
    > .masthead > section
      clearfix()
      article.summary > .wrap
        grid(4)
    > #index.banner > .wrap
      grid(12)
    > #index.primary > .wrap
      grid(8)
      > section#social
        rowInside()
        > .widget > .wrap
          grid(4)
      > section#recent-articles
        rowInside()
        article.summary
          clearfix()
          > .thumbnail
            grid(2)
          > .meta
            grid(6)
          
    > #index.sidebar > .wrap
      grid(4)
    > #index.footer
      clearfix()
      > .wrap
        grid(12)

// code-index page
section#content
  > .wrap
    > #code-index.header > .wrap
      grid(12)
    > #code-index.primary
      > section.project > .wrap
        grid(3)
    > #code-index.footer
      > .test
        grid(12)

// blog-index page
section#content
  > .wrap
    > #blog-index.header > .wrap
      grid(12)
    > #blog-index.primary
      > article.summary > .wrap
        grid(2)
    > #blog-post.header > .wrap
      grid(12)
    > #blog-post.left-sidebar > .wrap
      grid(2)
    > #blog-post.primary > .wrap
      grid(8)
    > #blog-post.right-sidebar > .wrap
      grid(2)
footer#primary
  > .wrap
    #code.widget
    > .message > .wrap
      grid(3)
    > .animate
      grid(9)
      > .panels
        rowInside()
        > .block
          grid(3)

// resize 1 - smaller monitors / laptops / tablets horiz
@media only screen and (min-width: 960px) and (max-width: 1080px)
  r1cw = 50px // resize 1 column width
  .page-wrap
    nav#primary
    header#content, 
    section#content, 
    footer#primary
      row(r1cw)
  
  section#content
    > .wrap
      > .primary > .wrap
        grid(8, r1cw)
        > section#index-articles
          > .masthead
            rowInside()
            > article.summary
              grid(4, r1cw)
          > #recent-posts.widget > article.summary
            rowInside()
            > .thumbnail
              grid(2, r1cw)
            > .meta
              grid(6, r1cw)
            
      > .sidebar > .wrap
        grid(4, r1cw)
  
  footer#primary
    > .wrap
      #code.widget
        > .message > .wrap
          grid(3, r1cw)
        > .animate
          grid(9, r1cw)
          > .panels
            rowInside()
            > .block
              grid(3, r1cw)

// resize 2 - tablets vert
@media only screen and (min-width: 768px) and (max-width: 959px)
  r2cw = 60px // release 2 column width
  r2gw = 15px // release 2 gutter width
  r2ct = 8 // release 2 column count
  .page-wrap
    nav#primary
    header#content, 
    section#content, 
    footer#primary
      row(r2cw, r2gw, r2ct)
  
  section#content
    > .wrap
      > .primary > .wrap
        grid(8, r2cw, r2gw, r2ct)
        > section#index-articles
          > .masthead
            rowInside(r2gw)
            > article.summary
              grid(4, r2cw, r2gw, r2ct)
          > #recent-posts.widget > article.summary
            rowInside(r2gw)
            > .thumbnail
              grid(2, r2cw, r2gw, r2ct)
            > .meta
              grid(6, r2cw, r2gw, r2ct)
            
      > .sidebar > .wrap
        grid(8, r2cw, r2gw, r2ct)
  
  footer#primary
    > .wrap
      #code.widget
        > .message > .wrap
          grid(2, r2cw, r2gw, r2ct)
        > .animate
          grid(6, r2cw, r2gw, r2ct)
          > .panels
            rowInside(r2gw)
            > .block
              grid(2, r2cw, r2gw, r2ct)

