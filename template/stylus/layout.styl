            > article.summary
              grid(4, r3cw, r3gw, r3ct)
          > #recent-posts.widget > article.summary
            rowInside(r3gw)
            > .thumbnail
              grid(1, r3cw, r3gw, r3ct)
            > .meta
              grid(3, r3cw, r3gw, r3ct)
            
      > .sidebar > .wrap
